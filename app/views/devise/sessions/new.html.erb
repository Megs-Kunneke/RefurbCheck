<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card border shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= f.input :remember_me, as: :boolean, class: 'form-check-input' if devise_mapping.rememberable? %>
              <%= f.label :remember_me, class: 'form-check-label' if devise_mapping.rememberable? %>
            </div>

            <div class="form-group text-center">
              <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
